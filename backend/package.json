{
    "name": "learnermax-course-backend",
    "description": "LearnerMax Course Backend API",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "packageManager": "pnpm@10.13.1",
    "main": "dist/app.js",
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.398.0",
        "@aws-sdk/client-sns": "^3.398.0",
        "@aws-sdk/lib-dynamodb": "^3.398.0",
        "express": "^4.18.2",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.0",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.0",
        "@types/node": "^20.0.0",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "aws-sdk-client-mock": "^2.0.0",
        "esbuild": "^0.25.10",
        "eslint": "^9.0.0",
        "jest": "^29.2.1",
        "supertest": "^7.1.4",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.0"
    },
    "scripts": {
        "build": "tsc",
        "start": "node dist/app.js",
        "dev": "tsc && node dist/app.js",
        "dev:bg": "./scripts/start-dev-bg.sh",
        "dev:stop": "./scripts/stop-dev-bg.sh",
        "dev:logs": "cat .local-dev.log",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest",
        "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
        "clean": "rm -rf dist",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src --ext .ts"
    },
    "jest": {
        "preset": "ts-jest/presets/default-esm",
        "testEnvironment": "node",
        "setupFiles": ["<rootDir>/jest.setup.js"],
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "transform": {
            "^.+\\.tsx?$": [
                "ts-jest",
                {
                    "useESM": true
                }
            ]
        },
        "testMatch": [
            "**/__tests__/**/*.test.ts"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 80,
                "branches": 80,
                "functions": 80,
                "lines": 80
            }
        }
    }
}
